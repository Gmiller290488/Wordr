<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_marginTop="@dimen/word_vertical_margin"
        android:layout_marginLeft="@dimen/word_horizontal_margin"
        android:layout_marginRight="@dimen/word_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/word_hint"
        android:id="@+id/add_word_editText"/>
    <Button
        android:layout_marginLeft="@dimen/word_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/define_btn"
        android:id="@+id/get_definition"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="@dimen/definition_horizontal_margin"
        android:hint="@string/definition_hint"
        android:id="@+id/add_def_editText"
        />
    <Button
        android:layout_marginLeft="@dimen/definition_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_btn"
        android:id="@+id/save_word"/>

</LinearLayout>